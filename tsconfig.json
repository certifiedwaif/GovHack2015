{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ES2015",
    "module": "AMD",
    "moduleResolution": "Node",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "incremental": true,
    "lib": [
      "es6",
      "dom.iterable",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "config",
    "models"
  ]
}